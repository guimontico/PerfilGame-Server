datasource db {
  provider        = "postgresql"
  url             = env("DATABASE_URL")

  schemas         = ["public", "auth"]
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  name     String?

  @@schema("auth")
}

